@using ProductCatalog.DAL.Entities
@model Product

@{
    ViewData["Title"] = "Product Details";
    bool isAdmin = User.IsInRole("Admin");
}

<h2>@Model.Name</h2>

<p><strong>Price:</strong> @Model.Price</p>
<p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
<p><strong>Duration:</strong> @Model.DurationInDays days</p>
<p><strong>Category:</strong> @Model.Category?.Name</p>
<p><strong>Created By:</strong> @Model.CreatedByUserId</p>
<p><strong>Creation Date:</strong> @Model.CreationDate.ToShortDateString()</p>
<a href="@(isAdmin ? Url.Action("GetAllProducts") : Url.Action("GetAllProductsWithStillInOffer"))" class="btn btn-primary">Back</a>
