@model string
@{
    var actionName = Model ?? "FilterAllByCategory"; 
}

@if (ViewBag.Categories != null)
{
    <form asp-action="@actionName" method="get" class="form-inline float-right">
        <select name="categoryId" class="form-control" onchange="this.form.submit()">
            <option value="">-- Select Category --</option>
            @foreach (var category in (SelectList)ViewBag.Categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
    </form>
}
